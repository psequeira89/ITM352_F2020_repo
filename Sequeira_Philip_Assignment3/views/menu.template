    <script>
        //operates the modal for error
        // Get the modal
        let err_modal = document.getElementById('error');

        function showModal(id) {
            document.getElementById(id).style.display = 'block';
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == err_modal) err_modal.style.display = "none";
        }

        //display modal as block onload if error exists
        try {
            window.onload = showModal("error");
        } catch {
            //intentionally blank. catches TypeError if modals are not present on load
        }

        // Script to open and close sidebar
        function w3_open() {
            document.getElementById("mySidebar").style.display = "block";
        }

        function w3_close() {
            document.getElementById("mySidebar").style.display = "none";
        }

        var slideIndex = 1;
        showDivs(slideIndex);

        function plusDivs(n) {
            showDivs(slideIndex += n);
        }

        function showDivs(n) {
            var i;
            var x = document.getElementsByClassName("mySlides");
            if (n > x.length) { slideIndex = 1 }
            if (n < 1) { slideIndex = x.length }
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            x[slideIndex - 1].style.display = "block";
        }

        //clear localStorage if logged in successfully
        if (document.getElementById("greeter").innerText != 'Login') {
            if (localStorage.getItem('login_username') !== null) localStorage.removeItem('login_username');
            if (localStorage.getItem('reg_username') !== null) localStorage.removeItem('reg_username');
            if (localStorage.getItem('reg_fullname') !== null) localStorage.removeItem('reg_fullname');
            if (localStorage.getItem('reg_email') !== null) localStorage.removeItem('reg_email');
        }
    </script>

